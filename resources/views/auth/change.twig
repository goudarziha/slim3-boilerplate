{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    Change password
                    <form action="{{ path_for('auth.password.change') }}" method="POST" autocomplete="off">

                        <div class="form-group">
                            <label for="password_old">Current Password</label>
                            <input class="form-control {{ errors.password_old ? 'is-invalid': '' }}" type="password" name="password_old" placeholder="" aria-describedby="helpId">
                            {% if errors.password_old %}
                                <span class="invalid-feedback">{{ errors.password_old | first }}</span>
                            {% endif %}
                        </div>

                        <div class="form-group">
                            <label for="password">Password</label>
                            <input class="form-control {{ errors.password ? 'is-invalid': '' }}" type="password" name="password" id="password" placeholder="" aria-describedby="helpId">
                            {% if errors.password %}
                                <span class="invalid-feedback">{{ errors.password | first }}</span>
                            {% endif %}
                        </div>

                        <button type="submit" class="btn btn-default">Change password</button>

                        {{ csrf.field | raw }}
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}