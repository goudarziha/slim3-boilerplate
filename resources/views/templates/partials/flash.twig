{% if flash.getMessage('info') %}
    <script>
        $(document).ready(function () {
            $.notify({
                title: '',
                message: "{{ flash.getMessage('info') | first }}"
            }, {
                type: 'info',
                width: '20%'
            });
        });
    </script>
{% endif %}

